<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m" height="100%">
	<Dialog title="Edit/Create Environment">
		<content>
			<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout"
				id="idEnvironmentform">
				<sap.ui.layout.form:content>
					<Label text="Name" id="label0"/>
					<Input width="auto" id="input0" value="{Data>/name}"/>
					<Label text="CloudFoundry URL" id="label1"/>
					<Input width="auto" id="input2" value="{Data>/url}"/>
					<Label text="Space" width="100%" id="label0_1571681561027"/>
					<Input xmlns="sap.m" id="input0_1571681569206" width="auto" value="{Data>/space}"/>
					<Label text="Org" width="100%" id="label1_1571681624463"/>
					<Input xmlns="sap.m" id="input1" fieldWidth="10%" width="auto" value="{Data>/org}"/>
					<Label text="API EndPoint" width="100%" id="label2"/>
					<Input xmlns="sap.m" id="input2_1571681711203" width="auto" value="{Data>/apiendpoint}"/>
					<Label text="Credential Key" width="100%" id="label3"/>
					<Select id="idCredSelect_Env" selectedKey="{Data>/credentialKey}" items="{path: 'credentials>/'}">
						<core:ListItem key="{credentials>credentialKey}" text="{credentials>name}"/>
					</Select>
					<Label xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
						xmlns:sap.ui.layout.form="sap.ui.layout.form" text="" width="100%" id="label0_1571682503988"/></sap.ui.layout.form:content>
			</sap.ui.layout.form:SimpleForm>
		</content>
		<beginButton>
				<Button text="Save" press="onSaveEditEnvironment"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>